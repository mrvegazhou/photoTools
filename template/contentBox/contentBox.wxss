.content-box {
  width: 90%;
  height: 400rpx;
  background-color: #fff;
  margin: 0 auto;
  border-radius: 10rpx;
  border: 1rpx solid #ccc;
  margin-top: 20rpx;
}
.top {
  height: 65%;
  border-bottom: 1rpx solid #eee;
}
.top-block {
  height: 100%;
  display: flex;
  align-items: center;
}
.top-left {
  width: 33.333%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: 500;
}
.top-line {
  height: 80%;
  border: 1rpx solid #eee;
}
.top-right {
  width: 66.666%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: 500;
}
.bottom {
  height: 35%;
  /* background-color: #0f0; */
  border-radius: 40rpx;
}

.bottom-block {
  height: 100%;
  display: flex;
  align-items: center;
}

.bottom-line {
  height: 70%;
  border: 1rpx solid #eee;
}

.bottom-cell {
  width: 33.3%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
}

.bottom-cell>view view:last-child {
  font-size: 18rpx;
  color: #ccc;
}