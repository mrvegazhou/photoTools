.expert-item {
  padding: 30rpx 0 34rpx 0;
  margin: 10rpx 20rpx 7rpx 20rpx;
  background: #ffffff;
  border-bottom: 1px solid #dcdcdf;
}

.expert-item .expert-source{
  display: flex;
  left: 0;
  height: 76rpx;
  margin-bottom: 24rpx;
}
.expert-item .expert-source .avatar {
  display: flex;
  flex-direction: column;
}
.expert-item .expert-source .avatar image {
  width: 76rpx;
  height: 76rpx;
  border-radius: 76rpx;
  top: 10rpx;
  vertical-align: middle;
}
.expert-item .expert-source .job-title {
  color: #000000;
  margin-top: 5rpx;
}
.expert-item .expert-source .answer-date {
  margin-top: 11rpx;
  color: #888888;
}
.expert-item .expert-source .job-title-expert {
  color: #DBB668;
  margin-left: 10rpx;
}
.expert-item .expert-source .position {
  display: flex;
  flex-direction: column;
  height: 76rpx;
  margin: 0 0 0 20rpx;
  color: #a0acac;
  font-size: 25rpx;
}

.expert-item .expert-content {
  padding: 10rpx 0 0 0;
}
.expert-item .expert-content .title {
  font-size: 32rpx;
  font-weight: 500px;
  line-height: 40rpx;
  margin-bottom: 26rpx;
}
.expert-item .expert-content .answer-body {
  display: flex;
}
.expert-item .expert-content .answer-body .answer-content {
  font-size: 28rpx;
  line-height: 48rpx;
  color: #5b5b5b;
  display: flex;
  flex-direction: column;
  text-align: justify;
  overflow:hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:5;
}

.expert-item .expert-content .answer-body .answer-img {
  display: flex;
  flex-shrink:  1;
  margin-top: 0;
}
.expert-item .expert-content .answer-body .answer-img image {
  width: 120px;
  height: 100px;
  margin: 10rpx 0 10rpx 20rpx;
}