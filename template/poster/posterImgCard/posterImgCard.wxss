.mymod{
  width: 100%;
  /* height: 100%; */
  background: rgba(0,0,0,0.5);
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  z-index: 99;
  overflow-y: auto;
}
.share-card-box{
  width: 650rpx;
  margin: 50rpx auto;
} 
.imgbox{
  background: #fff;
  margin: 0 auto;
  text-align: center;
  border-radius: 10rpx 10rpx 10rpx 10rpx;
  box-shadow: 0rpx 10rpx 24rpx 0px 
    rgba(0, 28, 121, 0.3);
  position: relative;
  overflow: hidden;
}

.imgbox .img-upload{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 82rpx;
  height: 82rpx;
  background-color: rgba(51, 51, 51, .6);
  border-radius: 50%;
}
.imgbox .img-upload view {
  width: 80rpx;
  height: 75rpx;
  margin: 6rpx auto;
}
.imgbox .img-upload image {
  width: 100%;
  height: 100%;
}
.sk-box{
  width: 100%;
  height: 880rpx;
}
.sk-box .skeleton-rect{
  background-color: rgba(248, 248, 248, 1);
}
.sk-box .sk-header{
  width: 100%;
  height: 590rpx;
}
.sk-box .sk-intro{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 50rpx 30rpx;
}
.sk-box .sk-intro .sk-left{
  width: 75%;
}
.sk-box .sk-intro .sk-left view{
  width: 80%;
  height: 30rpx;
  margin-top: 10rpx;
  background-color: rgba(248, 248, 248, .6);
}
.sk-box .sk-intro .sk-left view:first-child{
  width: 50%;
  height: 40rpx;
  margin-top: 0;
  padding-bottom: 20rpx;
  background-color: rgba(248, 248, 248, 1);
}
.sk-box .sk-intro .sk-right view:nth-child(1){
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: 0 auto;
}
.sk-box .sk-intro .sk-right view:nth-child(2){
  width: 150rpx;
  height: 22rpx;
  margin-top: 10rpx;
  background-color: rgba(248, 248, 248, .6);
}
.canvas-img{
  vertical-align: top;
}
.footer {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 36rpx;
  margin: 50rpx auto 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.cancel{
  background-color: rgba(255, 255, 255, 1);
  border-radius: 16rpx;
  width: 200rpx;
  margin: 0 30rpx 0 30rpx;
}
.btn-cancel {
  color: var(--primary-dark-gray-color);
}
.finish {
  background-color: var(--primary-color);
  border-radius: 16rpx;
  width: 200rpx;
  margin: 0 30rpx 0 30rpx;
}
.btn-finish {
  color: #fff;
}