view,text{
  box-sizing: border-box;
}
.wrapper{
  position: absolute;
}
.scale-mask{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 100;
}
.horizontal-box .scroll-wrapper {
  position: relative;
  display: flex;
}
.horizontal-box .scale-wrapper{
  display: flex;
}
.horizontal-box .scale-grip{
  position: relative;
  height: 100rpx;
  display: flex;
}
.horizontal-box .scale-grip::before{
  content: "";
  position: absolute;
  top: 0;
  border-width: 1px;
  border-color: inherit;
  border-style: solid;
  height: 100%;
  transform: translateX(-50%);
  left: 0rpx;
}
.horizontal-box .scale-grip:last-child::after{
  content: "";
  position: absolute;
  top: 0;
  right:0;
  border-width: 1px;
  border-color: inherit;
  border-style: solid;
  height: 100%;
}
.horizontal-box .scale-grip-item{
  height: 60%;
  /* padding-top: 10rpx; */
}
.horizontal-box .scale-grip-item:not(:last-child){
  border-right: 1px solid #000000;
}
.horizontal-box .scale-vaule-wrapper{
  position: relative;
  display: flex;
  text-align: center;
}
.horizontal-box .scale-vaule{
  padding: 10rpx 0;
  transform: translateX(50%);
}
.horizontal-box .first-scale-value{
  position: absolute;
  left: 1px;
  bottom: 0;
  padding: 10rpx 0;
  transform: translateX(-50%);
}

.vertical-box{
  height: 100%;
}
.vertical-box .scroll-wrapper {
  position: relative;
}
.vertical-box .scroll-view{
  height: 100%;
}
.vertical-box .scale-container{
  display: flex;
  width: 100%;
}
.vertical-box .scale-grip{
  position: relative;
  width: 20rpx;
  /* border-top: 1px solid #dbdbdb;s */
}
.vertical-box .scale-grip:first-child::before{
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 10rpx;
  height: 0;
  border-top: 1px solid #dbdbdb;
}

.vertical-box .scale-grip-item{
  height: 60%;
  /* padding-top: 10rpx; */
}
.vertical-box .scale-grip-item{
  border-bottom: 1px solid #000000;
}
.vertical-box .scale-vaule{
  padding: 40rpx 0;
}
.vertical-box .scale-vaule-wrapper{
  position: relative;
  text-align: left;
  flex: 1;
}
