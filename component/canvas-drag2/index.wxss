.opt-container {
  width: 750rpx;
  height: 750rpx;
  overflow: hidden;
}
.touchWrap {
  transform-origin: center;
  position: absolute;
  z-index: 100;
}
.imgWrap {
  box-sizing: border-box;
  width: 100%;
  transform-origin: center;
  float: left;
}
.x {
  position: absolute;
  top: -25rpx;
  left: -25rpx;
  width: 50rpx;
  height: 50rpx;
  z-index: 30;
}
.o {
  position: absolute;
  bottom: -25rpx;
  right: -25rpx;
  width: 50rpx;
  height: 50rpx;
  z-index: 30;
}

.canvasWrap {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 999;
  text-align: center;
}
.resImg {
  width: 75%;
  margin-top: 10px;
}

.btn_view {
  display: flex;
  padding: 20rpx;
}
 
.btn_view button {
  width: 210rpx;
  font-size: 28rpx;
  background-color: #eb4985;
  color: #fff;
  line-height: 80rpx;
}
