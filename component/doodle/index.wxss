@import "../../template/iconfont/iconfont.wxss";
@import "../../template/theme.wxss";
/* 涂鸦样式 begin */
.doodle-edit-pop{
  background-color: rgba(0, 0, 0, 0.8);
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.doodle-board{
  position: relative;
  width: 100%;
  height: 100%;
}
.doodle-paint{
  height: 80%;
  background: #ffffff;
}
.doodle-board text{
  font-size: 35rpx;
  color: #f4f4f4;
}
.doodle-tools{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  margin: 20rpx 20rpx 0 20rpx;
}
.doodle-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* width: 90rpx; */
}
.doodle-icon .txt{
  font-size: 24rpx;
}
.doodle-tool-children{
  position:absolute;
  text-align:center;
  border-radius:3px;
  bottom: 20%;
  padding-bottom: 10rpx;
  left: 0;
  right:0;
  margin: 0 auto;
}
.doodle-tool-children text{
  color: var(--primary-text-color);
}
.pen-size-box{
  border-radius: 50%;
  display: inline-block;
}
.doodle-tool-children .text-center{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.doodle-tool-children slider{width:340rpx;}
.doodle-tool-children text{font-size: 24rpx;}
.doodle-tool-children .pen-size-box{
  border-radius: 50%;
  display: inline-block;
}
.doodle-tool-children .slider-box{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.doodle-tools .menu-select text{
  color:var(--primary-color);
}
.doodle-tool-children .tab-wapper{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}
.doodle-tool-children .select{
  font-size: 24rpx;
  color: var(--primary-text-color);
}
.doodle-tool-children .tab-item{
  padding: 5px 10px;
  color: #fff;
  font-size: 24rpx;
}
.doodle-tool-children .color-picker{
  width: 420rpx;
  left: 0;
  right:0;
  margin: 0 auto;
  border-radius: 5rpx;
  background: var(--primary-select-bg);
}
.doodle-tool-children .item-list{
  display: flex;
  flex-direction: row;
  justify-content:space-around;
  justify-self:center;
  align-items: center;
  border-radius: 5rpx;
  background: var(--primary-select-bg);
  padding: 20rpx;
  text-align: center;
  width: 500rpx;
  left: 0;
  right:0;
  margin: 0 auto;
}
.doodle-tool-children .item-btn{
  color: #fff; 
  font-size: 24rpx;
}
.doodle-paint{
  margin-top:0;
}
.doodle-paint .canvas-left{position:fixed;left:-100%;}
.doodle-paint canvas{background: #ffffff; width: 750rpx; height: 1090rpx;}
.circle-switch {
  display: inline-flex;
  justify-items: center;
  align-items: center;
}
/* 涂鸦样式 end */