.postContainer {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}
.bgImg {
  vertical-align: middle;
}
/* 操作区域 */
.contentWarp {
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  bottom: 120rpx;
  right: 0;
  margin: auto;
}
.touchWrap {
  transform-origin: center;
  position: absolute;
  z-index: 100;
}
.imgWrap {
  box-sizing: border-box;
  width: 100%;
  transform-origin: center;
  float: left;
}
.imgWrap image {
  float: left;
}
/* 触摸选中 */
.touchActive {
  box-shadow: 0 0 2rpx #333;
  border-radius: 5rpx;
  border: none;
}
.touchActive .x {
  display: block;
  width: 45rpx;
  height: 45rpx;
}
.touchActive .o {
  display: block;
  width: 45rpx;
  height: 45rpx;
}
/* 图片控件 */
.x {
  position: absolute;
  top: -25rpx;
  left: -25rpx;
  z-index: 500;
  display: none;
  width: 50rpx;
  height: 50rpx;
  overflow: hidden;
}
.o {
  position: absolute;
  bottom: -25rpx;
  right: -25rpx;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  display: none;
  overflow: hidden;
}
.imgWrap .imgXY{
  background-color: #5e616d;
  position: absolute;
  border-radius: 5rpx;
}

/* 画布 */
.maskCanvas {
  position: absolute;
  left: -200%;
  top: 100%;
}