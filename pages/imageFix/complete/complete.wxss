@import "../../../template/theme.wxss";
.container{
	width: 100vw;
	height: 100vh;
	display:flex;
	flex-flow:column nowrap;
	overflow: hidden;
}
.container-content{
	/* width: 100%;
  height: 48%; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  
}
.container-content-img{
	margin-top: 10rpx;
}
.img-msg{
	text-align: center;
	font-size: 15px;
	color: black;
}
.container-opt{
	width: 100%;
  background: #fff;
  flex: 1;
}
.msg{
	margin-top: 50rpx;
	text-align: center;
}
.icon_complete{
	font-size: 80rpx;
	color: var(--primary-color);
}
.container-opt-btn{
	width: 90%;
	margin: 0 auto;
	position: fixed;
	bottom: 100rpx;
	right:0px;
  left:0px;
	
}
.container-opt-btn button {
	margin-bottom: 20rpx;
	box-shadow: 0 0 10rpx 5rpx rgba(67,142,219,.25);
	background-color: var(--primary-color);
	color: #fff !important;
	font-weight: normal;
	height: 90rpx;
	padding: 0;
	line-height: 90rpx;
	width: 100% !important;
	border-radius: 10rpx;
}
