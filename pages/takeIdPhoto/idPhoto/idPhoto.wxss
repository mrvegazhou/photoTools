/* pages/idPhoto/idPhoto.wxss */
.container {
  height: 100vh;
	padding: 10rpx 30rpx;
	padding-bottom: 100rpx;
	overflow: visible;
	box-sizing: border-box;
	background:#fff;
}
.content-photo-demo {
  display: flex;
  flex-direction: row;
  justify-items: flex-start;
  align-items: center;
}
.content-photo-demo .demo-text {
  margin-left: 36rpx;
  font-size: 28rpx;
}
.content-photo-demo .demo-text .demo-item-text {
  margin: 5rpx;
}
.content-photo-demo image {
  width: 150rpx;
  height: 200rpx;
}
/* 颜色选择 */
.colors {
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: center;
	margin-top: 30rpx;
}
.colors .color {
	width: 4vw;
	height: 4vw;
	margin-right: 50rpx;
	border: 1px solid #ddd;
	border-radius: 50%;
	overflow: hidden;
}
.colors .color.transparent::before {
	content: '透明';
	position: absolute;
	left: 0;
	top: 50%;
	width: 100%;
	text-align: center;
	color: #333;
	line-height: 1;
	height: 1em;
	margin-top: -0.5em;
	font-size: 14px;
}
.blue {
	background-color: rgb(67,142,219);
}
.blue2 {
	background-color: rgb(0,191,243);
}
.red {
	background-color: red;
}
.white {
	background-color: white;
}

.size-content {
  margin-top: 30rpx;
  display: flex;
  flex-flow: row wrap;
}
.size-content .size-content-item {
  margin: 6rpx 10rpx 10rpx 6rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: rgb(233, 233, 233);
  display: flex;
  flex-direction: column;
}
.size-content .size-content-item .title {
  font-size: 35rpx;
}
.size-content .size-content-item .px, .size-content .size-content-item .size{
  font-size: 28rpx;
}
