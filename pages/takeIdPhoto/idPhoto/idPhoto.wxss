@import "../../../template/theme.wxss";
@import "../../../template/iconfont/iconfont.wxss";
.container {
  height: 100vh;
	padding: 10rpx 30rpx;
	padding-bottom: 100rpx;
	overflow: visible;
	box-sizing: border-box;
	background:#fff;
}
.content-photo-demo {
  display: flex;
  flex-direction: row;
  justify-items: flex-start;
  align-items: center;
}
.content-photo-demo .demo-text {
  margin-left: 36rpx;
  font-size: 25rpx;
  color: var(--primary-dark-gray-color);
}
.content-photo-demo .demo-text .demo-item-text {
  margin: 5rpx;
}
.content-photo-demo .img{
  width: 150rpx;
  height: 200rpx;
  text-align: center;
  position: relative;
}
.content-photo-demo .icon{
  font-size: 130rpx;
  position: absolute;
  bottom: 0;
  color: gray;
  left: 0;
  right: 0;
  margin: 0 auto;
}
/* 颜色选择 */
.colors {
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: center;
	margin-top: 30rpx;
}
.colors .color {
	width: 5vw;
	height: 5vw;
	margin-right: 50rpx;
	border: 1px solid #ddd;
	border-radius: 50%;
  overflow: hidden;
}
.colors .color.transparent::before {
	content: '透明';
	position: absolute;
	left: 0;
	top: 50%;
	width: 100%;
	text-align: center;
	color: #333;
	line-height: 1;
	height: 1em;
	margin-top: -0.5em;
	font-size: 10px;
}
.blue {
	background-color: rgb(67,142,219);
}
.blue2 {
	background-color: rgb(0,191,243);
}
.red {
	background-color: red;
}
.white {
	background-color: white;
}

.size-content {
  margin-top: 30rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
}
.size-content .size-content-item {
  width: 42%;
  margin: 6rpx 10rpx 10rpx 6rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  border: 1rpx solid var(--primary-border-color);
  display: flex;
  flex-direction: column;
}
.size-content .size-content-item .title {
  font-size: 30rpx;
  padding-left: 20rpx;
  margin-bottom: 10rpx;
}
.size-content .size-content-item .px, .size-content .size-content-item .size{
  font-size: 24rpx;
  padding-left: 20rpx;
  color: var(--primary-dark-gray-color);
}
