@import "../../../template/theme.wxss";
@import "../../../template/iconfont/iconfont.wxss";
page{
  background-color: #f2f2f2;
}
.add-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #ffffff;
  width: 150rpx;
  font-size: 28rpx;
  z-index: 1;
  bottom: 60rpx;
  background-color: var(--primary-color);
  padding: 15rpx;
  margin: 0 auto;
  position: absolute;
  left: 0; 
  right: 0;
  border-radius:3px;
  justify-content: center;
}
.preview{
  width: 100%;
  min-height: 71vh;
}
.preview canvas {
  width: 100%;
  height: 100%;
  margin: 0 auto;
}
.preview-template{
  width: 750rpx;
}
.select-btn{
  padding: 15rpx;
  width: 150rpx;
  text-align: center;
  background-color: var(--primary-light-gray-color);
  font-size: 28rpx;
  color: #ffffff;
  border-radius:3px;
  margin-right: 10rpx;
}
.save-btn{
  padding: 15rpx;
  width: 150rpx;
  text-align: center;
  background-color: var(--primary-color);
  font-size: 28rpx;
  border-radius:3px;
  color: #ffffff;
}
.preview-btn{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:center;
  position: absolute;
  z-index: 10;
  bottom: 20rpx;
  width: 100%;
  left: 0; 
  right: 0;
  margin: 15rpx auto;
}