@import "../../../template/theme.wxss";
page{
  background-color: #f2f2f2;
}
.container{
  width: 100%;
}
.add-btn {
  text-align: center;
  width: 230rpx;
  color: #ffffff;
  font-size: var(--primary-font-size-2);
  z-index: 1;
  bottom: 60rpx;
  background-color: var(--primary-color);
  padding: 19rpx;
  margin: 0 auto;
  position: absolute;
  left: 0; 
  right: 0;
  border-radius:3px;
}
.preview{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.preview canvas {
  width: 100%;
  height: 100%;
  margin: 0 auto;
}
.preview-template{
  text-align: center;
}
.select-btn{
  padding: 19rpx;
  width: 150rpx;
  text-align: center;
  background-color: var(--primary-light-gray-color);
  font-size: var(--primary-font-size-2);
  color: #ffffff;
  border-radius:3px;
  margin-right: 10rpx;
}
.save-btn{
  background-color: var(--primary-color) !important;
}
.preview-btn{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:center;
  z-index: 10;
  width: 100%;
  margin: 35rpx auto 0 auto;
  position: absolute;
  bottom: 60rpx;
}