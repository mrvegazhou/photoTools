<view class="container">
  <view class="add-btn" bindtap="bindViewTap" wx:if="{{imgFiles.length < 1}}">
    <text class="iconfont icon-tianjiatupian_huaban"></text>
    <view class="add-btn-font">
    选择照片
    </view>
  </view>
  <view class="preview" wx:else>
    <view class="preview-btn">
      <view class="select-btn" bindtap="bindViewTap">重新选择</view>
      <view class="save-btn" bindtap="saveTempFilePath">保存到相册</view>
    </view>
    <view class="preview-template">
      <canvas canvas-id="previewCanvas" type="2d" id="previewCanvas" style="height:{{imgH}}px; width:{{imgW}}px"></canvas>
    </view>
  </view>
</view>