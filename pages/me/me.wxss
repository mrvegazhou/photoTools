.container {
  height: 100%;
  margin: 40rpx 0 40rpx 0;
  padding: 0;
  background: #fff;
  overflow: hidden;
}

.user {
  display: flex;
  background: #fff;
  padding: 30rpx 25rpx 30rpx 0;
  border-bottom: 1px solid #dcdcdc;
  box-shadow: 0 10px 0 #eee;
}

.user .avatar {
  flex-grow: 1;
  text-align: center;
}

.user .userinfo-avatar {
  flex: 1;
  width: 100rpx;
  height: 100rpx;
  border-radius: 80rpx;
}

.user .user-info {
  flex: 5;
  text-align: left;
}

.user .user-info text {
  display: block;
}

.user .user-info .userinfo-nickname {
  padding: 8rpx 0 10rpx 0;
  font-size: 30rpx;
  color: #818a8f;
}

.user .user-info .position {
  font-size: 28rpx;
  color: #bababa;
  line-height: 34rpx;
}

.my {
  margin: 15rpx 0 0 0;
  border-top: solid 1px #ebebeb;
  box-shadow: 0 10px 0 #eee;
  border-bottom: solid 2px #ebebeb;
}

.my .my-item {
  display: flex;
  background: #fff;
  padding: 0;
}

.my .my-item .myitem-icon {
  flex: 1;
  flex-grow: 1;
  text-align: center;
}

.my .my-item .myitem-icon image {
  width: 40rpx;
  height: 40rpx;
  padding: 37rpx 0;
}

.my .my-item .myitem-name {
  flex: 5;
  text-align: left;
  font-size: 28rpx;
  color: #6d6d6d;
  line-height: 60rpx;
  padding: 30rpx 0;
  border-bottom: solid 1px #ebebeb;
}

.my .my-item:last-child .myitem-name {
  border-bottom: none;
}

.arrow {
  width: 10px;
  height: 10px;
  border-top: 2px solid #bababa;
  border-right: 2px solid #bababa;
  position: absolute;
  right: 20rpx;
  transform: rotate(45deg);
  margin-top: 50rpx;
  margin-right: 40rpx;
}
