@import "../../../template/theme.wxss";
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 30rpx 0;
}
.twinkle{
  border-radius: 8rpx;
  width: 90%;
  height: 250rpx;
  line-height: 250rpx;
  text-align: center;
  font-size: 200%;
  margin: 10rpx 0 25rpx 0;
}
.bgColor1{
  background: #8cc269;  /*水绿*/
}
.bgColor2{
  background: #f1c4cd; /*水红*/
}
.roll-font{
  position: absolute;
  white-space:nowrap;
}
.primary{
  color: #fff;
  background: var(--primary-color);
  margin-top: 30rpx;
  width: 230rpx;
  border-radius: 10rpx;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
  padding: 15rpx;
  margin-bottom: 30rpx;
}