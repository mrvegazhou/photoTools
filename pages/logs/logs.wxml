<view class="container">

  <view style="font-size:{{size}}px;">默认36px默认36px默认36px默认36px默认36px默认36px默认36px默认36px默认36px默认36px默认36px
  </view>
  <button bindtap="clickBig">变大{{size}}px</button>
  <button bindtap="clickSmall">变小{{size}}px</button>
  <view style="margin-top:50px;"></view>
  <image style="width:{{img_width}}px; height:{{img_height}}px;" src='https://pic4.zhimg.com/v2-2ae6d5f2e3f4a0ec6869f61c59b65e45_xs.jpg' mode="aspectFill"></image>
