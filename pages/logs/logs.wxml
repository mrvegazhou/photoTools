  <input bindinput="imgInputHeight" type='text' placeholder="输入图片高" />
  <view style="margin-top:50px;"></view>
  <view>
    <view style="background-color:red;width:50px;margin-bottom:{{margin}}px">间距</view>
    <view style="background-color:green;width:50px;">间距</view>
    <input bindinput="marginInput" type='text' placeholder="输入间距" />
  </view>
  <view style="margin-top:50px;"></view>

  <view style="height:100px;width: 100px;display:flex;flex-direction: row;">
    <view style="background-color:red;width:50px;margin-right:{{rightMargin}}px">间距</view>
    <view style="background-color:green;width:50px;">间距</view>
    <input bindinput="marginInput2" type='text' placeholder="输入间距" />
  </view>
  <view style="margin-top:50px;"></view>
